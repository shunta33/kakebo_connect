<h2>プロフィール編集</h2>
<%= form_with model:@user, local:true do |f| %>
  <label for="inputName">ハンドルネーム</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"ハンドルネーム"%>
  <label for="inputComment">コメント</label>
  <%= f.text_area :comment, id:"inputComment", placeholder:"自己紹介や目標など"%>
  <label for="inputTarget">1カ月の目標支出金額</label>
  <%= f.number_field :target_expenses, id:"inputTarget"%>

  <%= f.submit "変更を保存" %>
<% end %>