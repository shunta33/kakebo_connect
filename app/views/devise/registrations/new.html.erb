<div class="container">
  <div class="row">
    <div class="col-4 offset-1 pt-3">
      <h2>新規会員登録</h2>
    </div>
  </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
  <div class="row">
    <div class="field col-10 offset-2">
      <%= f.label :name, "ハンドルネーム" %><br />
      <%= f.text_field :name %>
    </div>

    <div class="field col-10 offset-2">
      <%= f.label :email, "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field col-10 offset-2">
      <%= f.label :password, "パスワード" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field col-10 offset-2">
      <%= f.label :password_confirmation, "パスワード（再確認）" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>



    <div class="actions col-10 offset-2 pt-3">
      <%= f.submit "新規登録" %>
    </div>
  <% end %>
  </div>
  <div class="row">
    <div class="col-11 offset-1 pt-3">
      <h5>登録済みの方</h5>
    </div>
    <div class="col-10 offset-2">
      <p><%= link_to "こちら", new_user_session_path %>からログインしてください</p>
    </div>
  </div>

</div>



