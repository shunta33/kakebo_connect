<div class="container">
  <div class="row">
    <div class="col-7 offset-1 pt-3">
      <h2>メールアドレス・パスワード変更</h2>
    </div>
  </div>


    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
  <div class="row pt-3">
      <div class="field col-10 offset-2">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field col-10 offset-2 pt-2">
        <%= f.label :password, "パスワード" %> <i>(変更しない場合は空欄にしてください)</i><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <br />
          <em>最低<%= @minimum_password_length %>文字以上の長さが必要です</em>
        <% end %>
      </div>

      <div class="field col-10 offset-2 pt-2">
        <%= f.label :password_confirmation, "パスワード確認" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="field col-10 offset-2 pt-2">
        <%= f.label :current_password, "現在のパスワード" %> <i>(パスワードを変更する場合は現在のパスワードを入力してください)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>

      <div class="actions col-10 offset-2 pt-2">
        <%= f.submit "変更する" %>
      </div>
    <% end %>
      <div class="col-4 offset-5">
        <%= link_to "マイページへ戻る", :back %>
      </div>
  </div>


</div>